<Window x:Class="AdventOfCodeDay3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdventOfCodeDay3"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="tbNumber" Text="Geef nummer op"
                 Height="30" Width="300" Margin="10"
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Background="Beige" />

        <TextBox x:Name="tbAnswer" Text="Antwoord..."
                 Height="30" Width="300" Margin="10,100"
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Background="Beige" />

        <Button x:Name="bCalculate" Content="Reken uit"
                 Height="30" Width="80" Margin="10,50"
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Click="bCalculateNumber" />
    </Grid>
</Window>
