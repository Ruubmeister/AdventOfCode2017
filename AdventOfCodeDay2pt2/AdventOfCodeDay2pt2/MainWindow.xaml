<Window x:Class="AdventOfCodeDay2pt2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdventOfCodeDay2pt2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="bOpenFileDialog" Content="Open bestand"
                 Height="30" Width="80" Margin="10"
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Click="bOpenFileDialog_Click" />

        <TextBox x:Name="tbFileName" Text="Kies bestand..."
                 Height="30" Width="300" Margin="10,50"
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Background="Beige" />

        <TextBox x:Name="tbSum" Text="Som..."
                 Height="30" Width="300" Margin="10,90"
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Background="Beige" />

        <TextBox x:Name="tbTotal" Text="Totaal..."
                 Height="30" Width="300" Margin="10,130"
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Background="Beige" />
    </Grid>
</Window>
